<!--            android:layout_marginBottom="10dp"-->
<!--            android:text="View all 20 comments"-->
<!--            android:id="@+id/comments"-->
<!--            android:textColor="@android:color/darker_gray"-->
<!--            android:layout_marginLeft="8dp" />-->

    </LinearLayout>


</RelativeLayout>